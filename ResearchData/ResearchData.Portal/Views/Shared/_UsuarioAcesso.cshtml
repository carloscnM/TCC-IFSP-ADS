@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizador

@{
    ViewData["ongoingprojects"] = _localizador["Projetos em Andamento"];
    ViewData["finishedprojects"] = _localizador["Projetos Finalizados"];
    ViewData["counter"] = _localizador["Contador"];
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mb-lg-5" style="width:100%; height:100%; " id="piechart"></div>
        <div class="col-lg-6 mb-4">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    @ViewData["ongoingprojects"]
                    <div class="text-white-50 small">@ViewData["counter"]: 1</div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    @ViewData["finishedprojects"]
                    <div class="text-white-50 small">@ViewData["counter"]: 1</div>
                </div>
            </div>
        </div>
    </div>
</div>