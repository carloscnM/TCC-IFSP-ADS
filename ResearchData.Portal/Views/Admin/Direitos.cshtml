@model ResearchData.Portal.Models.ViewModels.Admin.UsuarioEmailViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizador

@{
    ViewData["Title"] = "Direitos";
    Layout = "~/Views/Shared/_LayoutPainel.cshtml";

    ViewData["Routine access rights"] = _localizador["Direitos de acesso a rotinas"];
    ViewData["User's Email"] = _localizador["E-mail do usuário"];
    ViewData["Proceed"] = _localizador["Prosseguir"];

}


<div class="container">
    <div class="row">

        <h2 style="margin-top:3%; margin-left:3%;">@ViewData["Routine access rights"]</h2>

    </div>

    <div style="margin-top:5%; margin-left:3%;" class="row breadcrumb">
        <div class="form">
            <form asp-action="Direitos" asp-controller="Admin" method="post">
                
                <div class="col-lg-12 form-group">
                    <h5 class="" style="float:left; margin-bottom:2%; margin-left:2%;">
                        @ViewData["User's Email"]
                    </h5>

                    <input type="email" class="form-control" asp-for="Email" style="width:70%; float:left;" />
                    <input type="submit" class="btn btn-secondary" value="@ViewData["Proceed"]" style=" float:right;" />

                </div>
                <div class="form-group" style="float:right;">

                </div>
            </form>
        </div>

    </div>
    <br />
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

</div>


