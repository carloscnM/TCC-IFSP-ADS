@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizador

@{
    ViewData["close"] = _localizador["Fechar"];
    ViewData["verifydata"] = _localizador["Verifique os dados e tente novamente."];
    ViewData["size"] = _localizador["Tamanho minímo 8"];
    ViewData["checkThis"] = _localizador["Considere para senha:"];
    ViewData["Arrobba"] = _localizador["Caractere especial"];
    ViewData["chaaas"] = _localizador["Letras"];
    ViewData["numbrs"] = _localizador["Números"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RD Facility</title>
    <meta name="viewport" content="initial-scale = 1.0,maximum-scale = 1.0" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/login/tilt/tilt.jquery.min.js"></script>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metisMenu/2.7.8/metisMenu.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/SlickNav/1.0.10/slicknav.min.css">
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />

    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />

    <link href="~/css/Painel/css/themify-icons.css" rel="stylesheet" />
    <link href="~/css/Painel/css/typography.css" rel="stylesheet" />
    <link href="~/css/Painel/css/default-css.css" rel="stylesheet" />
    <link href="~/css/login/styles.css" rel="stylesheet" />
    <link href="~/css/Painel/css/responsive.css" rel="stylesheet" />

    <link rel="shortcut icon" type="imagem/x-icon" href="~/img/LogoMarca/rdfIcon.ico" />

</head>

<body>

    <div class="modal fade" id="modalErroLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ops!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label=@ViewData["close"]>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @ViewData["verifydata"]
                    <div style="margin:10px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @{
                            if (ViewData["ApresentarRegrasSenha"] != null)
                            {
                                @ViewData["checkThis"]

                                <ul>
                                    <li>@ViewData["size"]</li>
                                </ul>
                            }
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@ViewData["close"]</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <partial name="_CookieConsentPartial" />

        <div class="form" style="margin-top:15px; margin-bottom:30px;">
            @RenderBody()
        </div>


    </div>

    <div id="ModalTermoUsoDiv">

    </div>


    <script>
        function AbrirTermoDeUso() {
            $("#ModalTermoUsoDiv").load("/Sobre/TermoDeUso", function () {
                $("#ModalTermoUso").modal();
            });
        };
    </script>

    <!-- bootstrap 4 js -->
    <link href="~/css/NovaPasta/StyleSobre.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/js/Painel/js/popper.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/metisMenu/2.7.8/metisMenu.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/SlickNav/1.0.10/slicknav.min.css"></script>


    <script type="text/javascript" src="~/js/Painel/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/Painel/js/scripts.js"></script>



    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/login/Loginv2.js"></script>
    <script type="text/javascript" src="~/js/Idioma/site.js"></script>

    <script type="text/javascript" src="~/js/login/script.js"></script>
    <script type="text/javascript" src="~/js/modais.js"></script>

    <!--Exemplo abrir modal automaticamente-->


    @{
        var erroCadastroOuLogin = 0;

        if (ViewData["erroLoginOuCadastro"] != null)
        {
            erroCadastroOuLogin = Convert.ToInt16(ViewData["erroLoginOuCadastro"]);
        }

        if (erroCadastroOuLogin == 1)
        {

            <script>
                $(document).ready(function () {
                    $('#modalErroLogin').modal('show');
                })
            </script>

        }

    }


</body>
</html>