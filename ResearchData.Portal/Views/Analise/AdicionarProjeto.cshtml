
@model ResearchData.Portal.Models.ViewModels.Analises.NovaAnaliseViewModel


<div class="modal fade" id="addProj" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="color:black;">Novo Projeto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container jumbotron" style="margin-top:80px;">
                    <h4>Novo Projeto <i class="fa fa-area-chart"></i></h4>
                    <br />
                    <div class="row">
                        <div class="col-md-5">
                            <form asp-action="CadastrarNovaAnalise" asp-controller="Analise" method="post" id="CadastrarProj">
                                <div class="form-group">
                                    <label class="control-label">Título</label>
                                    <input type="hidden" asp-for="Titulo" class="form-control" />
                                    <label>Titulo</label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Descrição</label>
                                    <textarea class="form-control" maxlength="250"></textarea>
                                    <label>Descrição</label>
                                </div>
                                <input type="hidden" asp-for="ProjetoId" />
                                <div class="form-group">
                                    <input type="submit" value="Cadastrar" class="btn btn-primary col-lg-5" />
                                </div>
                            </form>
                        </div>
                    </div>
                    



                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="submitform()">Cadastrar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function submitform() {
        document.forms["CadastrarProj"].submit();
    }
</script>